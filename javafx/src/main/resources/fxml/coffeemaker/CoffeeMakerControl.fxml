<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"
         type="AnchorPane" xmlns="http://javafx.com/javafx/10.0.1">
    <children>
        <VBox prefHeight="476.0" prefWidth="493.0">
            <children>
                <Label fx:id="locationLabel" text="LocationLabel">
                    <font>
                        <Font size="50.0"/>
                    </font>
                </Label>
                <Label fx:id="modelLabel" text="ModelLabel">
                    <font>
                        <Font size="50.0"/>
                    </font>
                </Label>
                <Label fx:id="statusLabel" text="Status">
                    <font>
                        <Font size="29.0"/>
                    </font>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="onButton" mnemonicParsing="false" onAction="#onSwitchOn"
                                text="On"/>
                        <Button fx:id="offButton" mnemonicParsing="false" onAction="#onSwitchOff"
                                text="Off"/>
                        <Button fx:id="cleanItButton" mnemonicParsing="false" onAction="#onCleanIt"
                                text="CleanIt"/>
                    </children>
                </HBox>
                <Button fx:id="brewButton" mnemonicParsing="false" onAction="#onBrew"
                        text="BrewCoffee">
                    <font>
                        <Font size="57.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</fx:root>
