<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hhn.it.pp.javafx.controllers.spellingtrainer.ChooseLearningSetController">
  <children>
      <StackPane>
         <children>
            <Label prefHeight="59.0" prefWidth="500.0" text="Choose a learning set from the list below">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="70.0" right="70.0" top="50.0" />
         </VBox.margin>
      </StackPane>
      <ListView fx:id="learningsetListView" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="50.0" left="70.0" right="70.0" top="30.0" />
         </VBox.margin>
      </ListView>
      <HBox>
         <children>
            <Button fx:id="homescreenButton" mnemonicParsing="false" onAction="#handleHomescreenButtonClick" prefHeight="40.0" prefWidth="150.0" text="Homescreen">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" />
               </HBox.margin></Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="startLearningButton" mnemonicParsing="false" onAction="#handleStartLearningButtonClick" prefHeight="40.0" prefWidth="150.0" text="Start Learning">
               <HBox.margin>
                  <Insets bottom="5.0" right="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
  </children>
</VBox>
